<% if notice.present? %>
  <p id="notice" class="alert alert-success m-3">
    <%= notice %>
  </p>
<% end %>

<h1>Your Movie Lists</h1>
  <ul class = "m-3">
  <% @lists.each do |list| %>
    <li>
      <%= link_to list.name, list %>
      | <%= link_to '✏️', edit_list_path(list) %>
      | <%= link_to '🗑', list_path(list), method: :delete, data: { confirm: 'Are you sure?' } %>
   </li>
  <% end %>
  </ul>
<br>

<%= link_to 'New List', new_list_path, class: 'btn btn-primary m-3' %>
