<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1542204165-65bf26472b9b?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1867&q=80);">
  <div class="container">
    <h1>Your Movie Lists</h1>
    <p class="mt-2">Start by making a list</p>
    <%= link_to 'New List', new_list_path, class: 'btn-medium mt-1' %>
  </div>
</div>


<% if notice.present? %>
  <p id="notice" class="alert alert-success m-3">
    <%= notice %>
  </p>
<% end %>

<h2 class="m-3"> <%= @lists.empty? ? "You haven't saved any lists yet..." : "Your Lists:" %> </h2>

  <ul>
  <% @lists.each do |list| %>
    <li>
      <div  class = "card-category-list m-5"style="background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.5)), url(<%= cl_image_path list.photo.key, height: 300, crop: :fill %>)">
      <%= link_to list.name.upcase, list, class: "m-3" %>
      <%= link_to 'Edit', edit_list_path(list), class: "btn-medium ml-5" %>
      <%= link_to 'Delete', list_path(list), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-medium-danger m-2"  %>
        </div>
   </li>
  <% end %>
  </ul>
<br>


